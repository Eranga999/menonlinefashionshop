<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary_color">

    <!-- Profile Title -->

    <!-- Profile Image -->

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="My Profile"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:srcCompat="@drawable/user1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Hello, Sir welcome"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3">

        <Button
            android:id="@+id/bpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/Secondary_color"
            android:text="See my Order"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp" />

        <Button
            android:id="@+id/jkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Secondary_color"
            android:text="Creditcards"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileDetails"
        android:layout_width="342dp"
        android:layout_height="203dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintVertical_bias="0.5">

        <!-- Updated IDs for user profile details -->
        <TextView
            android:id="@+id/name"
            android:layout_width="308dp"
            android:layout_height="39dp"
            android:text="Name:    Eranga Harsha"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:text="Email:    Erangaharsha739@gmail.com"
            android:textColor="#000000"
            android:textColorHint="@color/grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tele"
            android:layout_width="312dp"
            android:layout_height="42dp"
            android:text="Telephone:   0710663600"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="310dp"
            android:layout_height="43dp"
            android:text="Address:   Anuradhapura, Sri Lanka"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileDetails"
        app:layout_constraintVertical_bias="0.5">

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/Accent_color"
            android:text="Edit profile"
            android:textColor="#FFFFFF"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Accent_color"
        android:text="@string/logout"
        android:textColor="@color/Primary_color"
        android:textColorLink="@color/Primary_color"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />
</androidx.constraintlayout.widget.ConstraintLayout>
